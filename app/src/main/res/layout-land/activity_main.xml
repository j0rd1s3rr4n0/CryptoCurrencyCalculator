    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/agrisado">

    <Button
        android:id="@+id/btn_zero"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="6dp"
        android:insetTop="6dp"
        android:insetRight="6dp"
        android:insetBottom="6dp"
        android:onClick="addNumber"
        android:text="@string/zero"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline24"
        app:layout_constraintStart_toStartOf="@+id/guideline19"
        app:layout_constraintTop_toTopOf="@+id/guideline27"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_one"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="6sp"
        android:insetTop="6sp"
        android:insetRight="6sp"
        android:insetBottom="6dp"
        android:onClick="addNumber"
        android:text="@string/one"
        android:textAlignment="center"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline25"

        app:layout_constraintEnd_toStartOf="@+id/guideline23"
        app:layout_constraintStart_toStartOf="@+id/guideline19"
        app:layout_constraintTop_toTopOf="@+id/guideline21"
        tools:ignore="DuplicateClickableBoundsCheck,MissingConstraints" />

    <Button
        android:id="@+id/btn_two"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="6sp"
        android:insetTop="6sp"
        android:insetRight="6sp"
        android:insetBottom="6dp"
        android:onClick="addNumber"
        android:text="@string/two"
        android:textAlignment="center"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline25"
        app:layout_constraintEnd_toStartOf="@+id/guideline24"
        app:layout_constraintStart_toStartOf="@+id/guideline23"
        app:layout_constraintTop_toTopOf="@+id/guideline21"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_three"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="6sp"
        android:insetTop="6sp"
        android:insetRight="6sp"
        android:insetBottom="6dp"
        android:onClick="addNumber"
        android:text="@string/three"
        android:textAlignment="center"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline24"
        app:layout_constraintTop_toTopOf="@+id/guideline21"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_four"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="6dp"
        android:insetTop="6dp"
        android:insetRight="6dp"
        android:insetBottom="6dp"
        android:onClick="addNumber"
        android:text="@string/four"
        android:textAlignment="center"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline26"
        app:layout_constraintEnd_toStartOf="@+id/guideline23"
        app:layout_constraintStart_toStartOf="@+id/guideline19"
        app:layout_constraintTop_toTopOf="@+id/guideline25"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_five"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="6sp"
        android:insetTop="6sp"
        android:insetRight="6dp"
        android:insetBottom="6dp"
        android:onClick="addNumber"
        android:text="@string/five"
        android:textAlignment="center"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline26"
        app:layout_constraintEnd_toStartOf="@+id/guideline24"
        app:layout_constraintStart_toStartOf="@+id/guideline23"
        app:layout_constraintTop_toTopOf="@+id/guideline25"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_six"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="6sp"
        android:insetTop="6sp"
        android:insetRight="6dp"
        android:insetBottom="6dp"
        android:onClick="addNumber"
        android:text="@string/six"
        android:textAlignment="center"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline26"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline24"
        app:layout_constraintTop_toTopOf="@+id/guideline25"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_seven"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="6sp"
        android:insetTop="6sp"
        android:insetRight="6sp"
        android:insetBottom="6sp"
        android:onClick="addNumber"
        android:text="@string/seven"
        android:textAlignment="center"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline27"
        app:layout_constraintEnd_toStartOf="@+id/guideline23"
        app:layout_constraintStart_toStartOf="@+id/guideline19"
        app:layout_constraintTop_toTopOf="@+id/guideline26"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_eight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="6sp"
        android:insetTop="6sp"
        android:insetRight="6sp"
        android:insetBottom="6dp"
        android:onClick="addNumber"
        android:text="@string/eight"
        android:textAlignment="center"

        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline27"
        app:layout_constraintEnd_toStartOf="@+id/guideline24"
        app:layout_constraintStart_toStartOf="@+id/guideline23"
        app:layout_constraintTop_toTopOf="@+id/guideline26"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_nine"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="6sp"
        android:insetTop="6sp"
        android:insetRight="6sp"
        android:insetBottom="6dp"
        android:onClick="addNumber"
        android:text="@string/nine"
        android:textAlignment="center"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline27"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline24"
        app:layout_constraintTop_toTopOf="@+id/guideline26"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_delete_one"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="@color/teal_200"
        android:gravity="center_horizontal|top|center_vertical|fill_vertical"
        android:insetLeft="6dp"
        android:insetTop="6dp"
        android:insetRight="6dp"
        android:insetBottom="6dp"
        android:onClick="delLast"
        android:pointerIcon="crosshair"
        android:textAlignment="gravity"
        android:textSize="96sp"
        android:textStyle="bold"
        app:icon="@drawable/ic_baseline_keyboard_backspace_24"
        app:iconGravity="textEnd"
        app:iconPadding="0dp"
        app:iconSize="80dp"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/guideline21"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline22"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btn_clear_all"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="none"
        android:backgroundTint="@color/red"
        android:backgroundTintMode="add"
        android:drawableTint="#FFFFFF"
        android:freezesText="false"
        android:insetLeft="2dp"
        android:insetTop="6dp"
        android:insetRight="3sp"
        android:insetBottom="6dp"
        android:onClick="cleanAll"
        android:pointerIcon="zoom_in"
        android:text="@string/clearall"
        android:textAlignment="textEnd"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        android:textSize="15sp"
        android:textStyle="bold"
        app:icon="@drawable/ic_baseline_delete_24"
        app:iconGravity="textStart"
        app:layout_constraintBottom_toTopOf="@+id/guideline21"
        app:layout_constraintEnd_toStartOf="@+id/guideline22"
        app:layout_constraintStart_toStartOf="@+id/guideline19"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_coma"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="6dp"
        android:insetTop="6dp"
        android:insetRight="6dp"
        android:insetBottom="6dp"
        android:onClick="insertComa"
        android:text="@string/coma"
        android:textAlignment="center"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline24"
        app:layout_constraintTop_toTopOf="@+id/guideline27"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_one"
        style="@style/alonetrext"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeMaxTextSize="40dp"
        android:autoSizeMinTextSize="14dp"
        android:autoSizeTextType="uniform"
        android:ellipsize="end"
        android:fallbackLineSpacing="true"
        android:foregroundGravity="center_vertical|center|center_horizontal"
        android:gravity="bottom|fill_vertical|end"
        android:importantForAutofill="auto|yes"
        android:scrollbarSize="0dp"
        android:singleLine="true"
        android:text="@string/zero"
        android:textAlignment="gravity"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline25"
        app:layout_constraintEnd_toStartOf="@+id/btn_clear_all"
        app:layout_constraintHorizontal_bias="0.922"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline21"
        app:layout_constraintVertical_bias="0.757"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_res"
        style="@style/alonetrext"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeMaxTextSize="40dp"
        android:autoSizeMinTextSize="14dp"
        android:autoSizeTextType="uniform"
        android:ellipsize="end"
        android:foregroundGravity="center_vertical|center|center_horizontal"
        android:gravity="bottom|fill_vertical|end"
        android:importantForAutofill="auto|yes"
        android:scrollbarSize="0dp"
        android:text="@string/zero"
        android:textAlignment="gravity"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline19"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline27"
        app:layout_constraintVertical_bias="0.274"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_coin_1"
        style="@style/alonetrext"
        android:layout_width="113dp"
        android:layout_height="84dp"
        android:autoSizeTextType="uniform"
        android:gravity="bottom|center|center_horizontal"
        android:onClick="dialogChooseTwo"
        android:text="@string/localcoin"
        app:layout_constraintBottom_toTopOf="@+id/tv_one"
        app:layout_constraintEnd_toStartOf="@+id/btn_switch_to"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_coin_2"
        style="@style/alonetrext"
        android:layout_width="166dp"
        android:layout_height="76dp"
        android:autoSizeTextType="uniform"
        android:fallbackLineSpacing="true"
        android:gravity="bottom|center|center_horizontal"
        android:lineSpacingExtra="8sp"
        android:onClick="dialogChooseone"
        android:outlineAmbientShadowColor="#FF0404"
        android:outlineProvider="paddedBounds"
        android:outlineSpotShadowColor="#FF0000"
        android:text="@string/btc"
        app:layout_constraintBottom_toTopOf="@+id/guideline27"
        app:layout_constraintEnd_toStartOf="@+id/btn_switch_to"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline26"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/btn_switch_to"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/boton_redondo"
        android:contentDescription="@string/switch_to_description"
        android:onClick="switchConversion"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline26"
        app:layout_constraintEnd_toStartOf="@+id/btn_four"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline25"
        app:srcCompat="@drawable/ic_baseline_wifi_protected_setup_24"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.24087591" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.666666666666667" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8333333333333334" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.43" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.63" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.81" />


</androidx.constraintlayout.widget.ConstraintLayout>